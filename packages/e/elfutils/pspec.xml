    <Package>
        <Name>elfutils</Name>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib64/elfutils/*.so</Path>
            <Path fileType="library">/usr/lib64/libasm-*.so</Path>
