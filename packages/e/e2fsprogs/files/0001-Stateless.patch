diff --git a/misc/Makefile.in b/misc/Makefile.in
index e5420bbd..e21da00e 100644
--- a/misc/Makefile.in
+++ b/misc/Makefile.in
@@ -551,12 +551,12 @@ filefrag.8: $(DEP_SUBSTITUTE) $(srcdir)/filefrag.8.in
