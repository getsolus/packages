<?xml version="1.0" ?>
<!DOCTYPE PISI SYSTEM "https://solus-project.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>nettle</Name>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey.doherty@gmail.com</Email>
        </Packager>
        <Summary>Low level cryptographic library</Summary>
        <Description>The Nettle package contains the low-level cryptographic library that is designed to fit easily in many contexts.</Description>
        <License>LGPL-3.0</License>
        <Archive sha1sum="b2eb5b36e65a8d3ed60ff81ec897044dead6dae0" type="targz">http://ftp.gnu.org/gnu/nettle/nettle-3.2.tar.gz</Archive>

        <BuildDependencies>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>libgcc-32bit</Dependency>
            <Dependency>libstdc++-32bit</Dependency>
            <Dependency>gmp-32bit-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>libnettle</Name>
        <PartOf>system.base</PartOf>
        <Files>
            <Path fileType="library">/usr/lib64/libnettle*.so.*</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>libnettle-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/libnettle*.so.*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libhogweed</Name>
        <Files>
            <Path fileType="library">/usr/lib64/libhogweed*.so*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libhogweed-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/libhogweed*.so*</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle-32bit</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>nettle-bin</Name>
        <Summary>Low level cryptographic library (binary tools)</Summary>
        <Description>Low level cryptographic library (binary tools)</Description>
        <IsA>app:console</IsA>
        <Files>
            <Path fileType="library">/usr/bin</Path>
            <Path fileType="info">/usr/share/info</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libnettle-devel</Name>
        <Summary>Development files for libnettle</Summary>
        <Description>Development files for libnettle</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib64/lib*.so</Path>
            <Path fileType="library">/usr/lib64/lib*.a</Path>
            <Path fileType="data">/usr/lib64/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libnettle-32bit-devel</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Summary>32-bit Development files for libnettle</Summary>
        <Description>32-bit Development files for libnettle</Description>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so</Path>
            <Path fileType="library">/usr/lib32/lib*.a</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libnettle-32bit</Dependency>
            <Dependency release="current">libnettle-devel</Dependency>
        </RuntimeDependencies>
    </Package>

