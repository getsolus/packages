 1 file changed, 2 insertions(+), 23 deletions(-)

diff --git a/configure.ac b/configure.ac
index e44f1ab9e..d7f563ada 100644
--- a/configure.ac
+++ b/configure.ac
@@ -7278,33 +7278,12 @@ elif test "$GCC" = "yes" -o "$COM_IS_CLANG" = TRUE; then
             flag="-Xclang $flag"
         fi
         save_CXXFLAGS=$CXXFLAGS
-        CXXFLAGS="$CXXFLAGS $flag -Werror"
+        CXXFLAGS="$CXXFLAGS $flag -Werror -Wno-deprecated"
         if test "$SYSTEM_LIBCMIS" = TRUE; then
             CXXFLAGS="$CXXFLAGS -DSYSTEM_LIBCMIS $LIBCMIS_CFLAGS"
         fi
         AC_LANG_PUSH([C++])
