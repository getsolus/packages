From 0000000000000000000000000000000000000000 Mon Sep 17 00:00:00 2001
From: Silke Hofstra <silke@slxh.eu>
Date: Wed, 8 Oct 2025 19:23:53 +0200
Subject: [PATCH] Rename `task` to `go-task` in shell completions

---
 completion/bash/task.bash | 2 +-
 completion/fish/task.fish | 4 ++--
 completion/zsh/_task      | 4 ++--
 3 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/completion/bash/task.bash b/completion/bash/task.bash
index 77617c72..8d2f8b85 100644
--- a/completion/bash/task.bash
+++ b/completion/bash/task.bash
@@ -1,7 +1,7 @@
 # vim: set tabstop=2 shiftwidth=2 expandtab:
 
 _GO_TASK_COMPLETION_LIST_OPTION='--list-all'
-TASK_CMD="${TASK_EXE:-task}"
+TASK_CMD="${TASK_EXE:-go-task}"
 
 function _task()
 {
diff --git a/completion/fish/task.fish b/completion/fish/task.fish
index c62b2ce3..2a1fbc74 100644
--- a/completion/fish/task.fish
+++ b/completion/fish/task.fish
@@ -1,4 +1,4 @@
-set -l GO_TASK_PROGNAME (if set -q GO_TASK_PROGNAME; echo $GO_TASK_PROGNAME; else if set -q TASK_EXE; echo $TASK_EXE; else; echo task; end)
+set -l GO_TASK_PROGNAME (if set -q GO_TASK_PROGNAME; echo $GO_TASK_PROGNAME; else if set -q TASK_EXE; echo $TASK_EXE; else; echo go-task; end)
 
 # Cache variables for experiments (global)
 set -g __task_experiments_cache ""
@@ -16,7 +16,7 @@ function __task_get_experiments
     end
 
     # Refresh cache
-    set -g __task_experiments_cache (task --experiments 2>/dev/null)
+    set -g __task_experiments_cache (go-task --experiments 2>/dev/null)
     set -g __task_experiments_cache_time $now
     printf '%s\n' $__task_experiments_cache
 end
diff --git a/completion/zsh/_task b/completion/zsh/_task
index 2562a6cf..ca6c0d90 100755
--- a/completion/zsh/_task
+++ b/completion/zsh/_task
@@ -1,6 +1,6 @@
-#compdef task
+#compdef go-task
 typeset -A opt_args
-TASK_CMD="${TASK_EXE:-task}"
+TASK_CMD="${TASK_EXE:-go-task}"
 compdef _task "$TASK_CMD"
 
 _GO_TASK_COMPLETION_LIST_OPTION="${GO_TASK_COMPLETION_LIST_OPTION:---list-all}"
