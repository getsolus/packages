@@ -425,13 +425,9 @@ macro(shiboken_compute_python_libraries)
         "SHIBOKEN_COMPUTE_LIBS" "shiboken_compute_python_libraries"
         "IS_CALLED_FROM_EXPORT" "" "" ${ARGN})
 
